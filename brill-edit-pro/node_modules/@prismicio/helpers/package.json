{
	"name": "@prismicio/helpers",
	"version": "2.0.0-beta.0",
	"description": "Set of helpers to manage Prismic data",
	"keywords": [
		"typescript",
		"helpers",
		"utils",
		"toolbox",
		"prismic"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio/prismic-helpers.git"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"type": "module",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs"
		},
		"./graphql": {
			"require": "./dist/graphql/index.cjs",
			"import": "./dist/graphql/index.mjs"
		},
		"./dist/graphql": {
			"require": "./dist/graphql/index.cjs",
			"import": "./dist/graphql/index.mjs"
		},
		"./package.json": "./package.json"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "siroc build",
		"dev": "siroc build --watch",
		"format": "prettier --write .",
		"prepare": "npm run build",
		"release": "npm run build && npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:dry": "standard-version --dry-run",
		"release:beta": "npm run build && npm run test && standard-version --release-as major --prerelease beta && git push --follow-tags && npm run build && npm publish --tag beta",
		"release:beta:dry": "standard-version --release-as major --prerelease beta --dry-run",
		"lint": "eslint --ext .js,.ts .",
		"unit": "nyc --reporter=lcovonly --reporter=text --exclude-after-remap=false ava",
		"test": "npm run lint && npm run unit"
	},
	"dependencies": {
		"@prismicio/richtext": "^2.0.0-beta",
		"@prismicio/types": "^0.1.13",
		"escape-html": "^1.0.3"
	},
	"devDependencies": {
		"@types/escape-html": "^1.0.1",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"ava": "^3.15.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-tsdoc": "^0.2.14",
		"nyc": "^15.1.0",
		"prettier": "^2.4.1",
		"prettier-plugin-jsdoc": "^0.3.24",
		"siroc": "^0.16.0",
		"standard-version": "^9.3.1",
		"ts-eager": "^2.0.2",
		"typescript": "^4.4.3"
	},
	"engines": {
		"node": ">=12.7.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
